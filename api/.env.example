# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/dojoexam?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:8081,http://localhost:19006

# Google OAuth
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id-from-cloud-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-cloud-console

# JWT Secrets (for access and refresh tokens)
JWT_ACCESS_SECRET=your-access-token-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production

# Google Play Integrity (for Android app verification)
# Project number from Google Cloud Console (numeric ID, not project name)
GOOGLE_CLOUD_PROJECT_NUMBER=your-google-cloud-project-number
# Path to Google service account JSON key file (for decrypting Play Integrity tokens)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json
